@page "/"
@using EncyclopediaGalactica.UI.FAST.FastAccordion
@using EncyclopediaGalactica.UI.FAST.FastAnchor
@using EncyclopediaGalactica.UI.FAST.FastAvatar

<PageTitle>Index</PageTitle>

<h1>Accordion</h1>
<h2>Without accordion item headers</h2>
<p>
    <FastAccordion>
        <FastAccordionItem IsExpanded="true">First item</FastAccordionItem>
        <FastAccordionItem IsExpanded="true">second item</FastAccordionItem>
    </FastAccordion>
</p>

<h2>With accordion item headers</h2>
<p>
    <FastAccordion>
        <FastAccordionItem IsExpanded="true">
            <FastAccordionItemHeader>FAST Accordion Item Header 1</FastAccordionItemHeader>
            FAST Accordion Item contents
        </FastAccordionItem>
        <FastAccordionItem IsExpanded="true">
            <FastAccordionItemHeader>FAST Accordion Item Header 2</FastAccordionItemHeader>
            FAST Accordion Item contents
        </FastAccordionItem>
    </FastAccordion>
</p>
<hr/>

<h1>Anchor</h1>
<FastAnchor>Default</FastAnchor>
<FastAnchor Appearance="@Configuration.Appearance.Neutral">Neutral</FastAnchor>
<FastAnchor Appearance="@Configuration.Appearance.Accent">Accent</FastAnchor>
<FastAnchor Appearance="@Configuration.Appearance.Lightweight">Lightweight</FastAnchor>
<FastAnchor Appearance="@Configuration.Appearance.Outline">Outline</FastAnchor>
<FastAnchor Appearance="@Configuration.Appearance.Stealth">Stealth</FastAnchor>
<FastAnchor Appearance="@Configuration.Appearance.Hypertext">Hypertext</FastAnchor>
<hr/>

<h1>Avatar</h1>
